{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "impliedStrict": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "eol-last": ["warn", "never"]
  },
  "reportUnusedDisableDirectives": true
}
